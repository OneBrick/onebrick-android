<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/back"
        android:tag="back"
        android:background="@drawable/event_card_back_border"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/ivListItemFbShare"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_fb_share"/>
        <ImageView
            android:id="@+id/ivListItemTwitterShare"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_twitter_share"/>
        <ImageView
            android:id="@+id/ivListItemShare"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_gen_share"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/front"
        android:tag="front"
        android:background="@drawable/event_card_front_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_height="75dp">
            <ImageView
                android:id="@+id/ivListItemEventImage"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_width="75dp"
                android:background="@drawable/event_image_border"
                android:src="@drawable/ic_launcher"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tvListItemEventName"
                android:layout_toRightOf="@+id/ivListItemEventImage"
                android:layout_width="fill_parent"
                android:text="Some long event name amy be 2 lines"
                android:textSize="@dimen/medium"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:padding="5dp">
            <ImageView
                android:id="@+id/ivListItemEventLocation"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_width="30dp"
                android:layout_height="75dp"
                android:src="@drawable/img_location"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/tvListItemEventAddress"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/ivListItemEventLocation"
                android:gravity="center_vertical"
                android:text="Some long event address > 1 line"
                android:textSize="@dimen/medium"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:padding="5dp">
            <ImageView
                android:id="@+id/ivListViewEventDate"
                android:layout_width="30dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/img_date"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/tvListItemEventDate"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/ivListViewEventDate"
                android:gravity="center_vertical"
                android:text="event date 1 line"
                android:textSize="@dimen/medium"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>