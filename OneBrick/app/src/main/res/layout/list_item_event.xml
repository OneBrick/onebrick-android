<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_selector"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:layout_height="75dp">
            <ImageView
                android:id="@+id/ivListItemEventImage"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_width="75dp"
                android:src="@drawable/ic_launcher"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tvListItemEventName"
                android:layout_toRightOf="@+id/ivListItemEventImage"
                android:layout_width="fill_parent"
                android:text="Some long event name amy be 2 lines"
                android:textSize="@dimen/big"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:padding="5dp">
            <ImageView
                android:id="@+id/ivListItemEventLocation"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_location_grey"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/tvListItemEventAddress"
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:layout_marginLeft="16dp"
                android:fontFamily="sans-serif"
                android:layout_toRightOf="@+id/ivListItemEventLocation"
                android:text="Some long event address > 1 line"
                android:textSize="@dimen/medium"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:padding="5dp">
            <ImageView
                android:id="@+id/ivListViewEventDate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_event_date_grey"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/tvListItemEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:textAllCaps="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/ivListViewEventDate"
                android:text="event date 1 line"
                android:textSize="@dimen/small"/>
            <Button
                android:id="@+id/btnListItemRsvp"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_rsvp_small"
                android:text="RSVP"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>