<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_screen_bg"
        tools:context="org.onebrick.android.activities.SplashScreenActivity">
        <ImageView
            android:id="@+id/ivLauncherLogo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:src="@drawable/one_brick_logo"/>
        <TextView
            android:id="@+id/tvWelcomeNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLauncherLogo"
            android:textColor="@color/onebrick_blue"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:text="@string/welcome_message"/>


    <ImageView
        android:id="@+id/ivSplashScreenFooter"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>


