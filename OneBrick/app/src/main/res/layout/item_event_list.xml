<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background_selector"
    style="@style/card"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivProfilePhoto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginRight="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/boston_banner"/>

    <TextView
        android:id="@+id/tvEventTitle"
        android:layout_toRightOf="@id/ivProfilePhoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/event_title_text_size"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Title"/>

    <TextView
        android:id="@+id/tvEventAddress"
        android:layout_below="@+id/tvEventTitle"
        android:layout_alignLeft="@+id/tvEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/event_date_text_size"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/text_grey"/>

    <TextView
        android:id="@+id/tvEventDate"
        android:layout_below="@+id/tvEventAddress"
        android:layout_alignLeft="@+id/tvEventAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAllCaps="true"
        android:textColor="@color/text_grey"
        android:text="Date"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventDate"
        android:layout_alignLeft="@id/tvEventDate"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRsvp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rsvp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/white_button_selector"/>

        <ImageView
            android:id="@+id/ibShareFacebook"
            android:scaleType="center"
            android:layout_width="@dimen/share_images_size"
            android:layout_height="@dimen/share_images_size"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_facebook"
            android:background="@drawable/social_button_selector"/>

        <ImageView
            android:id="@+id/ibShareTwitter"
            android:scaleType="center"
            android:layout_width="@dimen/share_images_size"
            android:layout_height="@dimen/share_images_size"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_twitter"
            android:background="@drawable/social_button_selector"/>

        <ImageView
            android:id="@+id/ibShare"
            android:scaleType="center"
            android:layout_width="@dimen/share_images_size"
            android:layout_height="@dimen/share_images_size"
            android:onClick="onShareThis"
            android:src="@drawable/ic_share"
            android:background="@drawable/social_button_selector"/>
    </LinearLayout>
</RelativeLayout>
