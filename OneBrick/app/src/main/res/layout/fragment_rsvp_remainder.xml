<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5pt"
        android:layout_height="wrap_content"
        android:text="When do you want to be reminded ?"
        android:textColor="@color/charcoal"
        android:textSize="20dp"/>
    <Spinner
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_seperation_border"
        android:entries="@array/timeSpan">
    </Spinner>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/item_seperation_border"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelRemainderAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/card_background"
            android:drawableStart="@drawable/ic_no_small"
            android:drawablePadding="5dp"
            android:paddingLeft="30dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/charcoal"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnAddRemainder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add"
            android:drawablePadding="5dp"
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/ic_yes_small30dip"
            android:background="@drawable/card_background"
            android:gravity="left|center_vertical"
            android:textColor="@color/charcoal"
            android:layout_weight="1"/>
        </LinearLayout>

</LinearLayout>