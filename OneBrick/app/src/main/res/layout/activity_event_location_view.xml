<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    tools:context="org.onebrick.android.activities.EventLocationView"
    android:orientation="vertical">
    <fragment
        android:id="@+id/mapViewFragment"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="2dp"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="450dp">
    </fragment>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/item_seperation_border_top"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/tvEventLocation"
            android:layout_toLeftOf="@+id/ivGetNavigtion"
            android:layout_alignParentTop="true"
            android:text="Address of the Event Location"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/event_detail_padding"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/charcoal"
            android:textSize="@dimen/big"/>
        <ImageView
            android:id="@+id/ivGetNavigtion"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:background="@drawable/learn_more_button_selector"
            android:adjustViewBounds="true"
            android:src="@drawable/img_nav"/>
    </RelativeLayout>


</LinearLayout>
