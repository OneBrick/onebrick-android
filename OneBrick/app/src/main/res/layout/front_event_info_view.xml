<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/front_event_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/ivListItemEventImage"
            android:layout_width="150dp"
            android:src="@drawable/ic_launcher"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tvListItemEventName"
            android:layout_toRightOf="@+id/ivListItemEventImage"
            android:layout_width="fill_parent"
            android:text="Event Name"
            android:textSize="30dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/ivListItemEventLocation"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/img_location"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
        />
        <TextView
            android:id="@+id/tvListItemEventAddress"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/ivListItemEventLocation"
            android:gravity="center_vertical"
            android:text="Event Address"
            android:textSize="25dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/ivListItemEventTime"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/img_time"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/tvListItemEventTime"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/ivListItemEventTime"
            android:gravity="center_vertical"
            android:text="Event Time"
            android:textSize="25dp"/>
    </RelativeLayout>
</LinearLayout>