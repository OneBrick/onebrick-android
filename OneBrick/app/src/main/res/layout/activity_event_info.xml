<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.onebrick.android.activities.EventInfoActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/onebrick_sf_banner"
        android:alpha="0.4">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp">
        <ImageView
            android:id="@+id/ivCalendarIcon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:src="@drawable/ic_onebrick_calendar_icon"/>
        <TextView
            android:id="@+id/tvEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivCalendarIcon"
            android:layout_centerVertical="true"
            android:textColor="@color/charcoal"
            android:text="Monday, OCT 13 @ 10:00AM - 12:00PM "/>
        <ImageView
            android:id="@+id/ivAdd2Calendar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@+id/tvEventTime"
            android:adjustViewBounds="true"
            android:paddingTop="1dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add_calendar"/>
    </RelativeLayout>
</LinearLayout>
